vendor(prp, args..., prefix='')
  {prefix}-webkit-{prp} args
  {prefix}-moz-{prp} args
  {prefix}-o-{prp} args
  {prefix}-ms-{prp} args
  {prefix}{prp} args

border-radius()
	vendor('border-radius', arguments)

appearance()
  vendor('appearance', arguments)

border-box()
  vender('border-box', arguments)

placeholder-color(color)
  &::-webkit-input-placeholder
    color: color
    opacity 0.6
  &::-moz-placeholder
    color: color
    opacity 0.6
  &::-o-placeholder
    color: color
    opacity 0.6
  &::-ms-placeholder
    color: color
    opacity 0.6
  &::-placeholder
    color: color
    opacity 0.6
