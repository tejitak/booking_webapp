.page__mypage
  .mypage_photos
    display -ms-flex
    display -webkit-flex
    display flex
    flex-wrap wrap

    .mypage_card_wrap
      width 50%
      position relative

  .mypage_head
    padding 20px
    text-align center
    position relative
    height 108px
    color #fff

    .mypage_head_overlay
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-size cover
      background-repeat no-repeat
      background-position 0 50%
      z-index -1

      &:before
        content ''
        display block
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background-color rgba(20, 31, 20, .8)

  .mypage_list
    background-color #EFF3F4
    .mypage_section
      background #FFFFFF
      box-shadow 0px 2px 4px 0px rgba(0,0,0,0.50), 0px 0px 0px 0px rgba(0,0,0,0.22)
      border-radius 2px
      font-size 15px
      line-height 18px
      margin-bottom 12px

      .mypage_section_header
        position relative
        width 100%
        a
          text-decoration none
          color #515356
          display block
          padding 8px

          &:after
            content ''
            sprite($sprite_arrow_right_black)
            position absolute
            top 10px
            right 12px

  .mypage_table
    color #fff

    .mypage_table_profile
      a
        line-height 24px
        
        .icon_instagram_white
          vertical-align middle

    .mypage_table_description
      color #aaa
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-box-orient vertical
      -webkit-line-clamp 2
      font-size 13px

  .top_no_result
    height 40px
    line-height 40px
    text-align center

.page_instagramer
  &.page__mypage .mypage_head
    height 128px