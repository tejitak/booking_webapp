.page__map
  .map_card
    height 60px
      
    .map_card_msg
      line-height 60px
      text-align center

  .map_float_button_wrap
    position fixed
    bottom 20px
    left 50%
    margin-left -38px
    retina_sprite($sprite_bottom_list, 172/64)

    span
      display none
      font-size 20px

  .customMarker
    border none
    position absolute
    padding-left 0
    cursor pointer

    img
      border 3px solid #FFFFFF
      box-shadow 0px 2px 6px 0px rgba(0,0,0,0.50)

  &.flip-transition
    vendor('transition', 0.6s)
    vendor('backface-visibility', hidden)
    background-color #fff

  &.flip-enter, &.flip-leave
    vendor('transform-style', preserve-3d)
    position fixed
    top 0
    left 0
    width 100%
    height 100%
  &.flip-enter
    vendor('transform', rotateY(180deg))
    opacity 1
  &.flip-leave
    vendor('transform', rotateY(-180deg))
    opacity 0
