.component__suggestionItem
  text-decoration none
  color #333

  .suggestion_wrap
    display table
    width 100%
    height 48px
    border-bottom 1px solid #eee
    padding 6px

    .suggestion_type_icon
      display table-cell
      width 48px
      vertical-align middle
      text-align center

    .suggestion_text
      display table-cell
      vertical-align middle

      small
        color #7E7E7E