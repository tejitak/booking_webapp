.component__profile
  
  height 53px
  margin 12px 0
  clearfix()

  .profile_photo
    float left
    width 50px
    margin-right 25px
    img
      width 50px
      border-radius 100%

  .profile_body
    float left
    width 146px
    padding 8px 0 0 0
    margin-left -10px
    a
      text-decoration none
      color #fff
  
  .profile_name,
  .profile_job
    fontsize 12px
    font-family 'Roboto Light'
    font-weight bold
    letter-spacing .09em

  .profile_job
    color #121213