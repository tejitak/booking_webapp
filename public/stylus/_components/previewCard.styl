.component__previewCard
  z-index 3
  display block
  width 100%
  height 100%
  text-decoration none
  color #fff

  .card_bg
    width 100%
    width 100%
    max-height 600px
    max-width 600px
    background-size contain
    background-repeat no-repeat
    background-position 50% 50%
    position relative

  .card_info_wrap
      height 56px
      position absolute
      width 100%
      bottom 0
      gradient_card()
      display table
      table-layout fixed

  .card_info_section
      position absolute
      left 8px
      bottom 8px
      font-size 12px
      width 100%

      .card_info_label
          margin-right 4px
          vertical-align middle

      .icon_distance, .icon_open_now, .icon_instagram_white_small
          vertical-align middle

  .card_title
    font-weight bold
    ellipsis()

  .card_info
    ellipsis()

  .card_text
    margin 0 8px
    color #aaa
    overflow hidden
    text-overflow ellipsis
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp 1
    font-size 12px

  .card_info
    line-height 20px
    margin 4px 8px
    color #fff
    overflow hidden
    text-overflow ellipsis
    span
      font-size 16px
    
  .card_profile
    position absolute
    right 16px
    bottom 0px

    img
      width 32px
      height 32px
      border-radius 100%
      vertical-align middle

    .icon_instagram_white
      vertical-align middle
      margin-bottom 2px

  .card_actions
    width 100%
    min-height 60px
    margin-top 20px

    .card_actions_inner
      max-width 960px
      margin 0 auto
      position relative

      hr
        margin 12px 0 4px 0
        border 1px solid #aaa

      .card_action_left
        position absolute
        top 8px
        left 8px

        .favorite_wrap
          padding 4px
          display block

      .card_action_right
        position absolute
        top 8px
        right 32px
        color #fff
        font-weight bold
        font-size 17px
        padding 8px 4px 8px
        display block
        
        .icon_forward
          position absolute
          top 1px
          right -24px

.preview_overlay
  height 100%
  width 100%
  background #000
  position fixed
  top 0
  left 0
  bottom 0
  // opacity 0.9
  z-index 2

.component__previewCardList
  position relative
  height 100%
  width 100%

  .previewCardList_body
    height 100%
    width 100%
    display table

  .preview_arrow_left, .preview_arrow_right
    display table-cell
    vertical-align middle
    color #fff
    font-size 20px
    text-align center
    display none

    &.arrow_disabled
      visibility hidden

    div
      width 40px

  .component__previewCard
    display table-cell
    vertical-align middle

  .card_bg
    margin 0 auto