.page__top
  .top_main
    display -ms-flex
    display -webkit-flex
    display flex
    flex-wrap wrap
    margin 4px
    max-width 960px

    .top_card_wrap
      width 50%
      position relative

  .top_title
    margin 12px 0
    font-size 16px
    text-align center
  
  .top_no_result
    height 40px
    line-height 40px
    text-align center

  .top_float_button_wrap
    position fixed
    bottom 20px
    left 50%
    margin-left -38px
    retina_sprite($sprite_bottom_map, 172/64)

    span
      display none
      font-size 20px

  &.top_search
    .top_main
      .top_card_wrap
        width 33%

        .card_wrap
          height 120px !important

  &.flip-transition
    vendor('transition', 0.6s)
    vendor('backface-visibility', hidden)
    background-color #fff

  &.flip-enter, &.flip-leave
    vendor('transform-style', preserve-3d)
    position fixed
    top 0
    left 0
    width 100%
    height 100%
  &.flip-enter
    vendor('transform', rotateY(180deg))
    opacity 1
  &.flip-leave
    vendor('transform', rotateY(-180deg))
    opacity 0