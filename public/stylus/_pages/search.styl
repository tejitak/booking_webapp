.page__search
  max-width 960px
  margin 0px auto
  
  .search_tabbar_wrap
    text-align center
    
    ul
      border-bottom 1px solid #1e2d2c

      li
        position relative
        cursor pointer
        display inline-block
        font-size 14px
        font-weight 700
        letter-spacing 1px
        margin 8px
        padding 4px 15px

        &.tab_selected:after
          content ""
          width 100%
          height 4px
          position absolute
          bottom -8px
          left 0
          border-bottom 4px solid #003580

  .search_loading
    position absolute
    top 50%
    left 50%
    margin-left -32px
    margin-top -48px

  .search_no_result
    margin 20px auto
    width 200px
    text-align center