.social_icon_wrap
    -webkit-box-pack center
    -moz-box-pack center
    -webkit-justify-content center
    justify-content center
    display -webkit-box
    display -moz-box
    display -webkit-flex
    display flex
    padding-top 60px

    li
      margin 0 15px
      -webkit-box-flex 0
      -moz-box-flex 0
      -webkit-flex none
      flex none

      &>a
        width 49px
        font-size 11px
        color #87898c
        text-decoration none
        text-align center
        display block

      &>a:before
        content ''
        display block
        overflow hidden
        background-repeat no-repeat
        text-align left
        text-indent -9999px

    .social_icon_fb a:before
      retina_sprite($sprite_icon_share_fb)

    .social_icon_tw a:before
      retina_sprite($sprite_icon_share_tw)

    .social_icon_line a:before
      retina_sprite($sprite_icon_share_line)
