.page__login
    padding 4px
    text-align center
    position fixed
    top 0
    left 0
    z-index 100
    color #fff
    height 100%
    width 100%

    &:before
        content ''
        background-color #000
        opacity 0.8
        position absolute
        height 100%
        width 100%
        top 0
        left 0

    .login_body
        position relative
        top 20px
    
    .login_titleWrap
        .login_title
            margin 64px 0 20px 8px
            font-size 18px

    .login_content
        margin 40px
    
        .login_btnWrap
            margin 60px 0 20px 0
            
    .login_note
        margin-top 20px
        
        small
            color #aaa

    .login_terms
        margin-top 8px
        a
            color #aaa
